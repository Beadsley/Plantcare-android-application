<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
    <!-- Customize your theme here. -->
    <style name="CustomToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@color/colorWhite</item>
    </style>

    <style name="PopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/colorAccent</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>
    
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#00BCD4</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>
